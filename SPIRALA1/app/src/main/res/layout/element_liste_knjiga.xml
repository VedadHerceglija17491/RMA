<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:visibility="visible">

    <ImageView
        android:id="@+id/eNaslovna"
        android:layout_width="73dp"
        android:layout_height="115dp"

        android:layout_alignParentTop="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/eNaziv"
        android:layout_width="311dp"
        android:layout_height="71dp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/eNaslovna"
        android:layout_toRightOf="@+id/eNaslovna"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/eAutor"
        android:layout_width="309dp"
        android:layout_height="44dp"


        android:layout_alignBottom="@+id/eNaslovna"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/eDatumObjavljivanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eBrojStranica"
        android:text="TextView" />

    <TextView
        android:id="@+id/eBrojStranica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eNaslovna"
        android:text="TextView" />

    <TextView
        android:id="@+id/eOpis"
        android:layout_width="383dp"
        android:layout_height="62dp"


        android:layout_alignParentStart="true"
        android:layout_below="@+id/eDatumObjavljivanja"
        android:text="TextView" />

    <Button
        android:id="@+id/dPreporuci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eOpis"
        android:layout_marginStart="0dp"
        android:focusable="false"
        android:text="Preporuci" />

</RelativeLayout>